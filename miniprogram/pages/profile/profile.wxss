.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info-section {
  background-color: #07c160;
  padding: 40rpx;
  display: flex;
  align-items: center;
  color: #fff;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #fff;
  overflow: hidden;
  margin-right: 30rpx;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
}

.user-role {
  font-size: 28rpx;
  opacity: 0.8;
}

.role-switch {
  margin-left: 20rpx;
}

.switch-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

/* 积分信息区域 */
.points-section {
  background-color: #fff;
  margin: 20rpx;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.points-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.points-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.points-balance {
  font-size: 48rpx;
  font-weight: bold;
  color: #ff6b35;
}

.points-detail {
  display: flex;
  justify-content: space-around;
  border-top: 2rpx solid #f0f0f0;
  padding-top: 20rpx;
}

.detail-item {
  text-align: center;
}

.detail-label {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 5rpx;
}

.detail-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

/* 功能菜单 */
.menu-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999;
}

/* 设置和退出 */
.settings-section {
  background-color: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx 0;
}

.logout-btn {
  width: 90%;
  height: 80rpx;
  background-color: #f44336;
  color: #fff;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin: 20rpx auto;
  display: block;
}
