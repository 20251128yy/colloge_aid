.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.logo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.logo image {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.logo .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.form {
  width: 100%;
  max-width: 600rpx;
  background-color: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.1);
}

.form-group {
  margin-bottom: 30rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #07c160;
  outline: none;
}

.btn {
  width: 100%;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.btn-primary {
  background-color: #07c160;
  color: #fff;
}

.btn-secondary {
  background-color: #fff;
  color: #333;
  border: 2rpx solid #e0e0e0;
}

.btn:disabled {
  opacity: 0.5;
}

.tips {
  margin-top: 40rpx;
  font-size: 24rpx;
  color: #999;
}
