.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-item {
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgba(0, 0, 0, 0.1);
}

.label {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.input {
  font-size: 30rpx;
  padding: 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  width: 100%;
  box-sizing: border-box;
}

.textarea {
  font-size: 30rpx;
  padding: 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  width: 100%;
  box-sizing: border-box;
  height: 200rpx;
  resize: none;
}

.picker-container {
  width: 100%;
}

.picker {
  font-size: 30rpx;
  padding: 15rpx;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  background-color: #f9f9f9;
  width: 100%;
  box-sizing: border-box;
  cursor: pointer;
}

.submit-btn {
  background-color: #07c160;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  padding: 20rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
  box-shadow: 0 2rpx 5rpx rgba(7, 193, 96, 0.3);
}

.submit-btn::after {
  border: none;
}