<view class="container">
  <view class="form-item">
    <text class="label">任务标题</text>
    <input 
      class="input" 
      placeholder="请输入任务标题" 
      bindinput="onInputChange"
      data-type="title"
    />
  </view>
  
  <view class="form-item">
    <text class="label">任务描述</text>
    <textarea 
      class="textarea" 
      placeholder="请详细描述任务内容" 
      bindinput="onInputChange"
      data-type="description"
    />
  </view>
  
  <view class="form-item">
    <text class="label">积分奖励</text>
    <input 
      class="input" 
      placeholder="请输入积分奖励" 
      type="number"
      bindinput="onInputChange"
      data-type="pointAmount"
    />
  </view>
  
  <view class="form-item">
    <text class="label">任务地点</text>
    <input 
      class="input" 
      placeholder="请输入任务地点" 
      bindinput="onInputChange"
      data-type="location"
    />
  </view>
  
  <view class="form-item">
    <text class="label">联系电话</text>
    <input 
      class="input" 
      placeholder="请输入联系电话" 
      bindinput="onInputChange"
      data-type="contactPhone"
    />
  </view>
  
  <view class="form-item">
    <text class="label">期望完成时间</text>
    <picker 
      mode="datetime" 
      start="{{startTime}}" 
      end="{{endTime}}"
      bindchange="onTimeChange"
    >
      <view class="picker">
        {{expectedCompletionTimeText}}
      </view>
    </picker>
  </view>
  
  <button bindtap="onSubmit" class="submit-btn">发布任务</button>
</view>